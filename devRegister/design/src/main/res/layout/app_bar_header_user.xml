<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_strong"
        android:elevation="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <include
            layout="@layout/holder_developers"
            app:layout_collapseMode="parallax"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
    />

    <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:collapsedTitleTextAppearance="@style/Collapse.Theme.Activity.Developer.Collapsed"
            app:expandedTitleTextAppearance="@style/Collapse.Theme.Activity.Developer.Expanded"
    >


        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:title="Atividades"
                app:subtitle="Veja as atividades deste desenvolvedor"
                app:titleTextColor="@android:color/white"
                android:paddingLeft="15dp"
                android:alpha="0.0"
                app:navigationIcon="@drawable/ic_activity_executing"
                android:background="@color/blue_strong"
                app:titleTextAppearance="?android:textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                app:layout_collapseMode="pin"/>


    </android.support.design.widget.CollapsingToolbarLayout>



</android.support.design.widget.AppBarLayout>
